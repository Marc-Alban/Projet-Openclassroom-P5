{% extends 'Backend/layout.html.twig' %}
{% block head %} <title> Tableau de bord </title> {% endblock %}
{% block content %}
<!-- *************Bloc Article*********** -->
<div class="container">
    <div class="row">
        <div class="container">

            <h1 class="my-4 font-weight-bold">Tableau de bord</h1>

            <div class="grid">
                <div class="grid-item col-md-6 mb-4">
                    <!-- Article nb -->
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Nombre d'article</h5>
                            <p class="card-text">{{nbArticle}}</p>
                        </div>
                    </div>
                </div>
                <div class="grid-item col-md-6 mb-4">
                    <!-- Lien nb -->
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Nombre de lien</h5>
                            <p class="card-text">{{nbLien}}</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- **********************Instagram Api************************ -->
<div class="container" style="margin-top:20px;margin-bottom:20px;padding:50px;background-color:#ddd;">
    <div class="row">
        <div class="col-md-3">
            <img src="" class="profile-pic" style="border-radius:50%;">
        </div>
        <div class="col-md-9">
            <h2 class="username"></h2>
            <div class="row">
                <div class="col-md-4">
                    <span class="number-of-posts"></span> posts
                </div>
                <div class="col-md-4">
                    <span class="followers"></span> followers
                </div>
                <div class="col-md-4">
                    <span class="following"></span> following
                </div>
            </div>
            <div class="row" style="margin-top:60px;">
                <h4 class="name"></h4>
            </div>
            <div class="row">
                <h4 class="biography"></h4>
            </div>
            <br>
            <hr><br>
            <div class="row">
                <p>POSTS</p>
            </div>
            <div class="row posts"></div>
        </div>
    </div>
</div>
<!-- ******************************* -->

{% endblock %}

{% block javascript %}
<script src="js/instagram.js"></script>
{% endblock %}