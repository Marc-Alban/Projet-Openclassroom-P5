{% extends 'Backend/layout.html.twig' %}
{% block head %} <title> Tableau de bord </title> {% endblock %}
{% block content %}

<!-- *************Bloc *********** -->
<div class="container mt-3 my-5 py-5">
    <div class="row">

        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Section: Block Content -->
            <section>
                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-6 col-lg-6 mb-4">

                        <!-- Card -->
                        <div class="card primary-color white-text">
                            <div class="card-body d-flex justify-content-around
                                align-items-center">
                                <div>
                                    <p class="h2-responsive font-weight-bold
                                        mt-n2 mb-0">{{data.countArticle}}
                                        article{% if data.countArticle > 1 %}s{%
                                        elseif data.countArticle <= 1 %}{% endif
                                            %}
                                    </p>
                                </div>
                                <div>
                                    <i class="far fa-edit fa-3x fa-4x
                                        text-black-40"></i>
                                </div>
                            </div>
                            <a class="card-footer footer-hover small text-center
                                white-text border-0 p-2" href="?p=table">Liste
                                articles<i class="fas fa-arrow-circle-right
                                    pl-2"></i></a>
                        </div>
                        <!-- Card -->

                    </div>
                    <!-- Grid column -->


                    <!-- Grid column -->
                    <div class="col-md-6 col-lg-6 mb-4">

                        <!-- Card -->
                        <div class="card light-blue lighten-1 white-text">
                            <div class="card-body d-flex justify-content-around
                                align-items-center">
                                <div>
                                    <p class="h2-responsive font-weight-bold
                                        mt-n2 mb-0"> Liens partenaires</p>
                                </div>
                                <div>
                                    <i class="far fa-edit fa-3x fa-4x
                                        text-black-40"></i>
                                </div>
                            </div>
                            <a class="card-footer footer-hover small text-center
                                white-text border-0 p-2" href="?p=table">Liste
                                liens<i class="fas
                                    fa-arrow-circle-right pl-2"></i></a>
                        </div>
                        <!-- Card -->

                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </section>
            <!-- Section: Block Content -->
        </div>
    </div>
</div>
<!-- **********************Instagram Api************************ -->
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <!-- Card -->
            <div class="card testimonial-card">

                <!-- Background color -->
                <div class="card-up indigo lighten-1"></div>

                <!-- Avatar -->
                <div class="avatar mx-auto white">
                    <img src="" alt="" id="profile-pic">
                </div>

                <!-- Content -->
                <div class="card-body">
                    <div class="col-md-12">
                        <h2 id="username"></h2>
                        <div class="row">
                            <div class="col-md-4"><span id="number-of-posts"></span>
                                posts</div>
                            <div class="col-md-4"><span id="followers"></span>
                                followers</div>
                            <div class="col-md-4"><span id="following"></span>
                                following</div>
                        </div>
                        <div class="row" style="margin-top:60px">
                            <h4 id="name"></h4>
                        </div>
                        <div class="row">
                            <h4 id="biography"></h4>
                        </div>
                        <br>
                        <hr>
                        <br>
                        <div class="row" id="posts">
                            <div class="col-md-4 equal-height">
                                <img src="" id="postImg">
                                <div class="row">
                                    <div id="postLikeComment"></div>
                                    <div class="col-md-6" id="postLikes"></div>
                                    <div class="col-md-6" id="postComments"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->
        </div>
    </div>
</div>
<!-- ******************************* -->

{% endblock %}

{% block javascript %}
<script src="js/instagrame.js"></script>
{% endblock %}