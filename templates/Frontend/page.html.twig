{% extends 'Frontend/layout.html.twig' %}
{% block head %} {% for pages in data.page %} <title> {{pages.title}} </title> {% endfor %} {% endblock %}
{% block title %} {% for pages in data.page %} {{pages.title}} {% endfor %}{% endblock %}
{% block content %}

<!--Grid column-->
<div class="col-md-12">
    <!--Card-->
    <div class="card hoverable pb-5 mx-md-3">
        <!-- img -->
        <img class="jarallax-img" src="https://mdbootstrap.com/img/Photos/Others/city7.jpg" alt="">
        <!-- /img -->
        <div class="card-body">
            <div class="container">
                {% for pages in data.page %}
                <!--Section heading-->
                <h1 class="text-left h1 pt-4 mb-3">
                    <strong>{{pages.title}}</strong>
                </h1>
                <!-- Grid column -->
                <div class="row mt-3">

                    <p class="dark-grey-text article">{{pages.description}}</p>

                </div>
                <!--/Grid colomn -->
                {% endfor %}
            </div>
            <!--/Grid column-->
        </div>
        <!--/Grid row-->
    </div>
    <!--/Card-->
</div>
<!--/Grid column-->

{% endblock %}