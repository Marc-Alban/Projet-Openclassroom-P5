{% extends 'Frontend/layout.html.twig' %}
{#-------------------------TITLE----------------------------#}
{% block head %} <title> Accueil </title> {% endblock %}
{#-------------------------END-TITLE----------------------------#}
{#-------------------------TITLE-PAGE---------------------------#}
{% block title %}
Performance selon les profils de risque:
{% endblock %}
{#------------------------END-TITLE-PAGE---------------------------#}
{% block content %}
<div class="row">
    {#-------------------------GRILLE-COLONNE---------------------------#}
    {% for graph in data.graph %}
    <div class="col-lg-6 col-md-8 col-sm-12 mb-4" data-toggle="modal"
        data-target="#graph{{graph.id}}">
        <div class="card">
            {#-------------------------CARD---------------------------#}
            {#-------------------------CARD-IMAGE---------------------------#}
            <div class="view overlay">
                <img class="card-img-top" src="img/{{graph.image}}" alt="Card
                    image cap">
                <div class="mask rgba-white-slight"></div>
            </div>
            {#------------------------END-CARD-IMAGE---------------------------#}
            {#-------------------------CARD-CONTENT---------------------------#}
            <div class="card-body">
                {#-------------------------CARD-TITLE---------------------------#}
                <h4 class="card-subtitle text-left">{{
                    graph.title }}</h4>
                {#------------------------END-CARD-TITLE---------------------------#}
                {#-------------------------CARD-DESCRIPTION---------------------------#}
                <p class="card-text font-weight-bold text-justify">
                    {{graph.description}}</p>
                {#------------------------END-CARD-DESCRIPTION---------------------------#}
            </div>
        </div>
        {#------------------------END-CARD---------------------------#}
    </div>
    {#------------------------END-GRILLE-COLONNE---------------------------#}
    {% endfor %}
</div>
{#-------------------------MODAL---------------------------#}
{% for graph in data.graph %}
<div class="modal fade" id="graph{{graph.id}}" tabindex="-1" role="dialog"
    aria-labelledby="modaleLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                {#-------------------------MODAL-TITLE--------------------------#}
                <h5 class="modal-title" id="modaleLabel">{{graph.title}}</h5>
                {#------------------------END-MODAL-TITLE--------------------------#}
                <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {#-------------------------MODAL-BODY--------------------------#}
            <div class="modal-body">
                {#-------------------------MODAL-IMAGE--------------------------#}
                <img class="card-img-top" src="img/{{graph.image}}" alt="Card
                    image cap">
                {#------------------------END-MODAL-IMAGE--------------------------#}
                {#-------------------------MODAL-DESCRIPTION--------------------------#}
                <p class="card-text font-weight-bold text-justify">
                    {{graph.description}}</p>
                {#------------------------END-MODAL-DESCRIPTION--------------------------#}
            </div>
            {#------------------------END-MODAL-BODY--------------------------#}
            {#-------------------------MODAL-FOOTER--------------------------#}
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                    data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
            {#------------------------END-MODAL-FOOTER--------------------------#}
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}