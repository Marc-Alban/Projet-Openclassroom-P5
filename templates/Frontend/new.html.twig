{% extends 'Frontend/layout.html.twig' %}
{% block head %} <title>Nouveau mot de passe</title> {% endblock %}
{% block title %}Nouveau mot de passe{% endblock %}
{% block content %}
<form>
    <!-- Card -->
    <div class="card">

        <!-- Card body -->
        <div class="card-body">

            <!-- Material form register -->
            <form>

                <!-- Material input password -->
                <div class="md-form">
                    <i class="fa fa-lock prefix grey-text"></i>
                    <input type="password" id="materialFormCardPasswordEx" class="form-control">
                    <label for="materialFormCardPasswordEx" class="font-weight-light">Entrer votre mot de passe
                        (requis)</label>
                </div>

                <!-- Material input email -->
                <div class="md-form">
                    <i class="fa fa-exclamation-triangle prefix grey-text"></i>
                    <input type="password" id="materialFormCardConfirmEx" class="form-control">
                    <label for="materialFormCardConfirmEx" class="font-weight-light">Confirmation mot de passe
                        (requis)</label>
                </div>

                <div class="text-center py-4 mt-3">
                    <button class="btn btn-red" type="submit">Envoyer</button>
                </div>
            </form>
            <!-- Material form register -->

        </div>
        <!-- Card body -->

    </div>
    <!-- Card -->


    {% endblock %}